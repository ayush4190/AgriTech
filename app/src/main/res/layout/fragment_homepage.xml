<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Homepage">


   <LinearLayout
       android:orientation="vertical"
       android:background="@drawable/background"
       android:weightSum="10"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <RelativeLayout
          android:layout_weight="2"
          android:layout_width="match_parent"
          android:layout_height="0dp">

         <TextView
             android:id="@+id/textGrid"
             android:text="Dummy User"
             android:textSize="34sp"
             android:textColor="@android:color/white"
             android:layout_centerInParent="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

      </RelativeLayout>

      <GridLayout
          android:id="@+id/mainGrid"
          android:columnCount="2"
          android:rowCount="3"
          android:alignmentMode="alignMargins"
          android:columnOrderPreserved="false"
          android:layout_weight="8"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:padding="14dp"
          >

         <!-- Row 1 -->

         <!-- Column 1 -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginBottom="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardCornerRadius="@dimen/activity_horizontal_margin"
             android:id="@+id/cardview_newVendor">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:adjustViewBounds="true"
                   android:src="@drawable/vendor" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Explore New Vendors"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="18sp"
                   android:textStyle="bold" />

            </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         <!-- Column 2 -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginBottom="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardCornerRadius="@dimen/activity_horizontal_margin"
             android:id="@+id/cardview_newContracts"
             >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView
                   android:src="@drawable/contracts"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:adjustViewBounds="true"
                   android:layout_height="wrap_content" />

               <TextView
                   android:text="New Contracts"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

            </LinearLayout>

         </com.google.android.material.card.MaterialCardView>


         <!-- Row 2 -->

         <!-- Column 1 -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginBottom="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardCornerRadius="@dimen/activity_horizontal_margin"
             android:id="@+id/cardViewTemplate"
             >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView
                   android:src="@drawable/template"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:adjustViewBounds="true"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Set Up template"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="18sp"
                   android:textStyle="bold" />

            </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         <!-- Column 2 -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginBottom="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardCornerRadius="@dimen/activity_horizontal_margin"
             android:elevation="@dimen/activity_horizontal_margin"
             >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView

                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:text="Existing Contracts"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

            </LinearLayout>

         </com.google.android.material.card.MaterialCardView>


         <!-- Row 2 -->

         <!-- Column 1 -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginBottom="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardCornerRadius="@dimen/activity_horizontal_margin"
             >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView

                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:text="Fun 1"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

            </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         <!-- Column 2 -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginBottom="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardElevation="8dp"
             app:cardCornerRadius="8dp"
             >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView

                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:text="Fun 2"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

            </LinearLayout>

         </com.google.android.material.card.MaterialCardView>



      </GridLayout>



   </LinearLayout>

</FrameLayout>